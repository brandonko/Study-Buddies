extends layout

block content
  body#page-top
    //- Navigation
    nav#mainNav.navbar.navbar-expand-lg.navbar-light.fixed-top
      .container
        a.navbar-brand.js-scroll-trigger(href='/') Study Buddies
        button.navbar-toggler.navbar-toggler-right(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
          | Menu
          i.fas.fa-bars
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link.js-scroll-trigger(href='/login') Login
            li.nav-item
              a.nav-link.js-scroll-trigger(href='/signup') Signup
    .limiter
      .container-login100
        .wrap-login100.p-t-50.p-b-90
          form.login100-form.validate-form.flex-sb.flex-w(method='post', action='/auth')
            span.login100-form-title.p-b-51
              | Login into Study Buddies
            .wrap-input100.validate-input.m-b-16(data-validate='Email is required')
              input.input100(type='email', name='email', placeholder='Email', required='')
              span.focus-input100
            .wrap-input100.validate-input.m-b-16(data-validate='Password is required')
              input.input100(type='password', name='password', placeholder='Password', required='')
              span.focus-input100
            .container-login100-form-btn.m-t-17
              button.login100-form-btn
                | Login
    #dropDownSelect1
