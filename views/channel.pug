    // chat box script
    script.
      window.onload = function()
      {
      document.getElementById("messages").innerHTML = getCookie("chat");
      scrollDown();
      };
      function getCookie(cname)
      {
      var name = cname + "=";
      var decodedCookie = decodeURIComponent(document.cookie);
      var ca = decodedCookie.split(';');
      for(var i = 0; i <ca.length; i++)
      {
      var c = ca[i];
      while (c.charAt(0) == ' ')
      {
      c = c.substring(1);
      }
      if (c.indexOf(name) == 0)
      {
      return c.substring(name.length, c.length);
      }
      }
      return "";
      }
      function scrollDown()
      {
      var objDiv = document.getElementById("scroll");
      objDiv.scrollTop = objDiv.scrollHeight;
      }
      function liked()
      {
      var lButton = document.getElementById("thumbs");
      lButton.innerHTML = ((parseInt((lButton.innerHTML)[0])) + 1) + "üëç";
      lButton.disabled = true;
      }
      function clearChat()
      {
      document.cookie = "chat=;";
      document.getElementById("messages").innerHTML = "";
      }
      // Function for adding to chat log
      $(function ()
      {
      // NEED TO FIND ACTUAL NAME
      var name = "#{userName}" + "|";
      var socket = io();
      $('#chatbox').submit(function()
      {
      socket.emit('chat message', name + $('#m').val());
      $('#m').val('');
      return false;
      });
      socket.on('chat message', function(msg)
      {
      var two = msg.split("|");
      if (two[1].length > 0)
      {
      var lis = document.createElement("li");
      lis.classList.add("list-group-item");
      var bol = document.createElement("b");
      bol.innerHTML = two[0]+": ";
      lis.appendChild(bol);
      lis.appendChild(document.createTextNode(two[1]));
      document.getElementById('messages').appendChild(lis);
      debugger;
      var cook = "chat="+document.getElementById("messages").innerHTML+";";
      document.cookie = cook;
      scrollDown();
      }
      });
